# API Configuration
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_WEBSOCKET_URL=http://localhost:3002

# Application Configuration
REACT_APP_NAME=KMRL Train Scheduler
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Features Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# UI Configuration
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,ml,hi
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Map Configuration
REACT_APP_MAP_API_KEY=your_google_maps_api_key
REACT_APP_MAP_DEFAULT_ZOOM=12
REACT_APP_MAP_CENTER_LAT=9.9312
REACT_APP_MAP_CENTER_LNG=76.2673

# Payment Configuration
REACT_APP_PAYMENT_GATEWAY_KEY=your_payment_gateway_public_key
REACT_APP_PAYMENT_GATEWAY_URL=https://checkout.payment-provider.com

# Social Media Configuration
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id
REACT_APP_TWITTER_API_KEY=your_twitter_api_key

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=debug

# Performance Configuration
REACT_APP_CACHE_DURATION=300000
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_REQUEST_TIMEOUT=10000

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_TRUSTED_DOMAINS=localhost,kmrl-scheduler.com

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# PWA Configuration
REACT_APP_PWA_SHORT_NAME=KMRL
REACT_APP_PWA_THEME_COLOR=#1976d2
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff
REACT_APP_PWA_START_URL=./
REACT_APP_PWA_DISPLAY=standalone